<div class="card-deck mt-3">
  <div class="card bg-light">
    {{#if annualLeave}}
      <div class="card-body text-left">
        <h4 class="card-text mb-3">Đăng ký nghỉ</h4>
      {{#ifCond isLocked '===' "true"}}
        <p style="color:red;">Bạn đang bị khóa chức năng này.</p>
      {{else}}
        <p><a href="/absence-details">Chi tiết</a></p>
        <form action="/absence" method="POST">
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fromDate">Từ ngày</label>
              <input
                required
                type="date"
                class="form-control"
                name="fromDate"
                value="{{#if errMessage}}{{fromDate}}{{/if}}"
              />
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="toDate">Đến ngày</label>
              <input 
              required 
              type="date" 
              class="form-control" 
              name="toDate"                 
              value="{{#if errMessage}}{{toDate}}{{/if}}" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fromHour">Từ mấy giờ</label>
              <input
                required
                type="time"
                class="form-control"
                id="fromHour"
                name="fromHour"
                min="08:00"
                max="17:00"
                value="{{#if errMessage}}{{fromHour}}{{/if}}"
              />
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="toHour">Đến mấy giờ</label>
              <input
                type="time"
                class="form-control"
                id="toHour"
                name="toHour"
                min="08:00"
                max="17:00"
                value="{{#if errMessage}}{{toHour}}{{/if}}"
              />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="reason">Lý do xin nghỉ</label>
              <input
                required
                type="text"
                class="form-control"
                name="reason"
                id="reason"
                value="{{#if errMessage}}{{reason}}{{/if}}"
              />
            </div>
          </div>
          <button type="submit" class="btn btn-secondary">Register</button>
        </form>
        <p class="mt-3">Số ngày nghỉ còn lại: {{annualLeave}} ngày</p>
        {{#if errMessage}}
          <p class="text-danger">{{errMessage}}</p>
        {{/if}}
      {{/ifCond}}
      </div>
    {{else}}
      <div class="card-body text-left">
        <h4 class="card-text mb-3">Bạn đã hết ngày nghỉ</h4>
        <form action="/absence" method="POST">
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fromDate">Từ ngày</label>
              <input
                disabled
                type="date"
                class="form-control"
                name="fromDate"
              />
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="toDate">Đến ngày</label>
              <input disabled type="date" class="form-control" name="toDate" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="fromHour">Từ mấy giờ</label>
              <input
                disabled
                type="time"
                class="form-control"
                id="fromHour"
                name="fromHour"
                min="08:00"
                max="17:00"
              />
            </div>
            <div class="form-group col-sm-12 col-md-6">
              <label for="toHour">Đến mấy giờ</label>
              <input
                type="time"
                class="form-control"
                id="toHour"
                name="toHour"
                min="08:00"
                max="17:00"
                disabled
              />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12 col-md-6">
              <label for="reason">Lý do xin nghỉ</label>
              <input
                disabled
                type="text"
                class="form-control"
                name="reason"
                id="reason"
              />
            </div>
          </div>
          <button
            type="submit"
            class="btn btn-secondary"
            disabled
          >Register</button>
        </form>
        <p class="mt-3">Số ngày nghỉ còn lại: {{annualLeave}} ngày</p>
      </div>
    {{/if}}
  </div>
</div>